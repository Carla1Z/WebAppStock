@using CodigoComun.Entities;
@model IEnumerable<Deposito>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Depositos</h1>
<a class="btn btn-primary" asp-action="Create">Agregar</a>
<table class="table">
	<thead>
		<tr>
			<th>
				ID
			</th>
			<th>
				Nombre
			</th>
			<th>
				Capacidad
			</th>
			<th>
				Direccion
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var deposito in Model)
		{
			<tr>
				<td>@deposito.Id</td>
				<td>@deposito.Nombre</td>
				<td>@deposito.Capacidad</td>
				<td>@deposito.Direccion</td>
				<td>
					<a class="btn btn-success" asp-action="Edit" asp-route-id="@deposito.Id">Editar</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@deposito.Id">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>